using Gtk 4.0;
using Astal 4.0;

template $AppMenu: Astal.Window {
  keymode: exclusive;
  layer: overlay;
  anchor: none;
  visible: false;
  styles ["AppMenu"]

  Box {
    orientation: vertical;

    Entry entry {
      halign: fill;
      hexpand: true;
      placeholder-text: "Pesquisar";
      activate => $on_activate();
      notify::text => $on_change();
    }

    ScrolledWindow {
      hscrollbar-policy: never;
      vexpand: true;

      child: Box {
        orientation: vertical;
        valign: start;

        Box providers {
          orientation: vertical;
          visible: false;
          valign: start;
          styles ["providers"]
        }
        Box app_list {
          orientation: vertical;
          styles ["app_list"]
        }
        Label placeholder {
          label: "ï”°  Sem resultados";
          visible: false;
          styles ["placeholder"]
        }
      };
    }
  }
  EventControllerKey {
    key-pressed => $on_key_pressed();
  }
}

