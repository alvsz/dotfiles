#!/bin/env sh

for i in $( seq 1 $( bluetoothctl paired-devices | grep -c . ) ); do
    mac=$( bluetoothctl paired-devices | awk "FNR == $i" | awk '{print $2}' )
    echo $mac
    name=$( bluetoothctl paired-devices | awk "FNR == $i" | awk '{$2=""}1' | awk '{$1=""}1' )
    if bluetoothctl info $( echo $mac ) | grep 'Connected: yes' && bluetoothctl info $( echo $mac ) | grep 'Icon: audio-headset'; then
	echo "$name está conectado"
    else
	echo "$name está desconectado"
    fi
    
done
