#!/bin/env sh

case "${XDG_SESSION_TYPE}" in
"x11")
	case "$1" in
	on)
		xset dpms force on
		;;
	off)
		xset dpms force off
		;;
	esac
	;;
"wayland")
	monitors=$(wlr-randr --json | jq -r '.[].name')
	case "$1" in
	on)
		for monitor in $monitors; do
			wlr-randr --output "${monitor}" --on
		done
		;;
	off)
		for monitor in $monitors; do
			wlr-randr --output "${monitor}" --off
		done
		;;
	esac
	;;
esac
