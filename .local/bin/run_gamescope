# args.lua $@

# ${gamescope} /tmp/gamescopecmd

# echo "$gamescope"
# echo "$*"
# env MANGOHUD=1 prime-run gamemoderun $*

${gamescope} env MANGOHUD=1 prime-run gamemoderun "$@"

# prime-run gamemoderun "$*"
