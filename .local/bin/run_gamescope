#!/bin/env sh

igpu=8086:3ea0
export INTEL_DEBUG=noccs
export MESA_VK_DEVICE_SELECT="$igpu"

if [ "$XDG_CURRENT_DESKTOP" != "gamescope" ]; then
	gamescope="gamescope --prefer-vk-device=$igpu $1 -H 1080 -U --"
fi

shift

# tee /tmp/gamescopecmd <<EOF >/dev/null
